<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/neutral_50"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rci19ahac1u"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="@color/neutral_50"
        android:paddingTop="24dp"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r6nxprnec81k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="23dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rbhce5oe31f"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_hi_user"
                        android:textColor="@color/neutral_500"
                        android:textSize="16sp"
                        android:layout_marginBottom="11dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Hi, Naufal Ramiz"
                        />
                    <TextView
                        android:id="@+id/tv_find_course"
                        android:textColor="@color/shades_100"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Find Your Course"
                        />
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FF000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rxzcrm1et3ua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rkknogw6rvzn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_yellow"
                    android:paddingTop="18dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/r390m17o0n0g"
                        android:textColor="#121926"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Phase"
                        />

                    <LinearLayout
                        android:id="@+id/phase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_dropdown"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="18dp"
                        android:layout_marginBottom="11dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_dropdown"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:spinnerMode="dropdown"
                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:background="@android:color/transparent" />

                        <ImageView
                            android:id="@+id/icon_down2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="#292D32" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/rsd0zhhv5wxh"
                        android:textColor="#121926"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Topic"
                        />
                    <LinearLayout
                        android:id="@+id/topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_dropdown"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="18dp"
                        android:layout_marginBottom="11dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_dropdown2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:spinnerMode="dropdown"
                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:background="@android:color/transparent" />

                        <ImageView
                            android:id="@+id/icon_down"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="#292D32" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/course1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card2"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/r0dihkdwmgrw"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_course"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rqks0mnihmqj"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_teacher_bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rvb49ytomrxi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_course_name"
                        android:textColor="@color/shades_100"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="On Boarding"
                        />

                    <TextView
                        android:id="@+id/tv_mentor"
                        android:textColor="@color/neutral_500"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mentor : Muhammad Richo"
                        />
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/circular_progress_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- ProgressBar in the background -->
                    <ProgressBar
                        android:id="@+id/circle_progressbar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:indeterminate="false"
                        android:rotation="-100"
                        android:max="100"
                        android:progress="50"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/circular_progress" />

                    <!-- LinearLayout to stack status text and progress text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="#000"
                            android:textSize="10sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:id="@+id/progress_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="#000"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rbwetxv1fwu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card2"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rvs6nw1zjbr"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_course"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/r4ew8e7i7dq7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_teacher_bold"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rq6jlmlvl5co"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/r77yi5e38g8q"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="SOLUTION Culture"
                        />
                    <TextView
                        android:id="@+id/rvpixk7aoqnl"
                        android:textColor="#64748B"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Batch 10"
                        />
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/circular_progress_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- ProgressBar in the background -->
                    <ProgressBar
                        android:id="@+id/circle_progressbar2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:indeterminate="false"
                        android:rotation="-100"
                        android:max="100"
                        android:progress="80"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/circular_progress" />

                    <!-- LinearLayout to stack status text and progress text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/status_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="#000"
                            android:textSize="10sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:id="@+id/progress_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textColor="#000"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rjnpb3okyokd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card2"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rkbn49i1iw38"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_course"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ra4b62acxfue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_teacher_bold"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ryor3o1hnd3t"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rf13pk85kgue"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="SOLUTION Culture"
                        />
                    <TextView
                        android:id="@+id/rwvtbm0wyjgf"
                        android:textColor="#64748B"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Batch 10"
                        />
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/circular_progress_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <!-- ProgressBar in the background -->
                    <ProgressBar
                        android:id="@+id/circle_progressbar3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:indeterminate="false"
                        android:rotation="-100"
                        android:max="100"
                        android:progress="15"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/circular_progress" />

                    <!-- LinearLayout to stack status text and progress text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/status_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="#000"
                            android:textSize="10sp"
                            android:layout_marginBottom="4dp" />
                        <TextView
                            android:id="@+id/progress_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15%"
                            android:textColor="#000"
                            android:textSize="16sp" />

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
