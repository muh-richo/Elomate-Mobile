<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rnyq2q118f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD133"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="33dp">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/ic_backarrow"
            android:orientation="vertical">
        </ImageView>

        <TextView
            android:id="@+id/r86slje7jaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To Do List"
            android:textColor="#0F172A"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/rpi6zcqs766q"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F1F5F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:flow_horizontalAlign="start"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/flow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="btnAll,btnPreTest,btnPostTest,btnTugas,btn360"
                    app:flow_wrapMode="chain"
                    app:flow_horizontalGap="4dp"
                    app:flow_verticalGap="12dp"
                    app:flow_horizontalAlign="start"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_title"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/textAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textColor="@color/shades_100"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnPreTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_title_gray"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/textPreTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pre-Test"
                        android:textColor="@color/neutral_400"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnPostTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_title_gray"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/textPostTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post-Test"
                        android:textColor="@color/neutral_400"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTugas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_title_gray"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/textTugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tugas"
                        android:textColor="@color/neutral_400"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn360"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_title_gray"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="20dp">

                    <TextView
                        android:id="@+id/text360"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="360"
                        android:textColor="@color/neutral_400"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/TotalTask"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blue_1"
                android:textSize="18sp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Incomplete Task : 0" />

            <!-- RecyclerView untuk menampilkan tugas -->
            <androidx.recyclerview.widget.RecyclerView
