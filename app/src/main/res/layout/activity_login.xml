<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/ryt33sq3qjsq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F9FAFB"
        android:paddingTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/roohn5v19rik"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="125dp"
                android:src="@drawable/ic_logo_elomate"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/ilustrasi"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="108dp"
                android:src="@drawable/illustration_login"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/ruzczpusyxg"
                android:textColor="#252525"
                android:textSize="30sp"
                android:layout_marginBottom="14dp"
                android:layout_marginVertical="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Selamat Datang!"
                />
            <TextView
                android:id="@+id/rzko9f2hbkdq"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="46dp"
                android:layout_marginVertical="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Silakan masukkan username dan password \nuntuk mengakses UT Elomate"
                />
            <TextView
                android:id="@+id/rxkl1qq8y15"
                android:textColor="#252525"
                android:textSize="14sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Username/NRP"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputUsernameNRPLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_grey"
                app:endIconMode="custom"
                app:startIconDrawable="@drawable/ic_profile"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextUsernameNRP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="masukkan username atau NRP"
                    android:textColor="@color/shades_100"
                    android:paddingStart="44dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/r7jfj4n2a5yw"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Password"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_grey"
                app:endIconMode="custom"
                app:startIconDrawable="@drawable/ic_key"
                app:endIconDrawable="@drawable/ic_eye"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="masukkan password"
                    android:textColor="@color/shades_100"
                    android:paddingStart="44dp"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/r79er5n2tvfe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_card2"
                android:backgroundTint="#FFCA0D"
                android:paddingVertical="18dp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rrqrbo0k5kyl"
                    android:textColor="#252525"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Login"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/ruezz106sq2g"
                android:textColor="#B78209"
                android:textSize="14sp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Lupa kata sandi?"
                />
            <ImageView
                android:id="@+id/rx1aj0l1usx"
                android:layout_width="196dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ic_logo_ut"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>