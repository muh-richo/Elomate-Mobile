<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/neutral_50"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/ryt33sq3qjsq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_elomate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="125dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_logo_elomate"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/ilustrasi"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:src="@drawable/illustration_login"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/ruzczpusyxg"
                android:textColor="#252525"
                android:textSize="30sp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Selamat Datang!" />

            <TextView
                android:id="@+id/rzko9f2hbkdq"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Silakan masukkan email dan password \nuntuk mengakses UT Elomate" />

            <TextView
                android:id="@+id/rxkl1qq8y15"
                android:textColor="#252525"
                android:textSize="14sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                />

            <com.unitedtractors.elomate.ui.custom.EmailEditText
                android:id="@+id/et_login_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_field_grey"
                android:hint="Masukkan email"
                android:textColorHint="@color/neutral_400"
                android:paddingHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_email" />

            <TextView
                android:id="@+id/tv_password"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Password"
                />

            <com.unitedtractors.elomate.ui.custom.PasswordEditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Masukkan password"
                android:textColorHint="@color/neutral_400"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/card_field_grey"
                android:inputType="textPassword"
                android:paddingHorizontal="15dp"
                app:icon="@drawable/ic_key"
                app:layout_constraintEnd_toEndOf="@+id/et_login_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_password" />

            <LinearLayout
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_card2"
                android:backgroundTint="#FFCA0D"
                android:paddingVertical="14dp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rrqrbo0k5kyl"
                    android:textColor="#252525"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Login"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/btn_forgot_password"
                android:textColor="#B78209"
                android:textSize="14sp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Lupa kata sandi?"
                />
            <ImageView
                android:id="@+id/iv_logo_ut_astra"
                android:layout_width="196dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:src="@drawable/logo_ut_astra"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="240dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/yellow_500"
        android:visibility="gone"
        android:clickable="false"
        android:indeterminate="true"/>
</FrameLayout>