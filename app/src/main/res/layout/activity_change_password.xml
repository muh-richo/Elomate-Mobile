<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/r458fawnhq14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#FFD133"
        android:paddingVertical="21dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_backarrow"
            android:background="@color/transparant"
            android:layout_marginEnd="9dp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/rv88ukie1nac"
            android:textColor="#0F172A"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Change Password" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/rc6iipqzjbpv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F9FAFB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="64dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ilustrasi"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:src="@drawable/illustration_login"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/rpcs8rivw9"
                android:textColor="#121926"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Current Password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_yellow"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_eye"
                app:startIconDrawable="@drawable/ic_key"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="masukkan password"
                    android:textColor="@color/shades_100"
                    android:paddingStart="44dp"
                    android:textSize="14sp"
                    android:inputType="textVisiblePassword"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/rpcdltnix3cr"
                android:textColor="#121926"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="New Password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputNewPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_yellow"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_eye"
                app:startIconDrawable="@drawable/ic_key"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="masukkan password"
                    android:textColor="@color/shades_100"
                    android:paddingStart="44dp"
                    android:textSize="14sp"
                    android:inputType="textVisiblePassword"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/rk4lky9ps4kn"
                android:textColor="#121926"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Confirm New Password" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputConfirmPassLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_yellow"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_eye"
                app:startIconDrawable="@drawable/ic_key"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="masukkan password"
                    android:textColor="@color/shades_100"
                    android:paddingStart="44dp"
                    android:textSize="14sp"
                    android:inputType="textVisiblePassword"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/r79er5n2tvfe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_card2"
                android:backgroundTint="#FFCA0D"
                android:paddingVertical="18dp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rrqrbo0k5kyl"
                    android:textColor="#252525"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Simpan"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
