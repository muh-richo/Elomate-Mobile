<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/bg_card2"
    android:backgroundTint="@color/shades_50"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_user"
        app:civ_border_color="#FF000000" />

    <LinearLayout
        android:id="@+id/content_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_nama"
                android:textColor="@color/shades_100"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="9dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Nama   : "
                />
            <TextView
                android:id="@+id/tv_nama_lengkap"
                android:textColor="@color/shades_100"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                tools:text="Muhammad Richo "
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_posisi"
                android:textColor="@color/shades_100"
                android:textSize="12sp"
                android:layout_marginEnd="9dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Posisi     : "
                />
            <TextView
                android:id="@+id/tv_posisi"
                android:textColor="@color/shades_100"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                tools:text="UI/UX Designer"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title_role"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginEnd="9dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Role        : "
                />
            <TextView
                android:id="@+id/tv_role"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                tools:text="Management Trainee"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>




