<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/neutral_50"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/rpfz8jfp8wch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F9FAFB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rstwqt1flqsf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_activity"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_title"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_activity"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Activity" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_preReading"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_title_gray"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_preReading"
                        android:textColor="@color/neutral_400"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pre-Reading"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_container_pre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="500dp"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>