<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rb4s2y8r5v3w"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9FAFB"
        android:paddingVertical="24dp"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rkxb7u3e5kjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="28dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rvrqzu18wgd"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_title"
                    android:backgroundTint="@color/yellow_100"
                    android:paddingVertical="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/r4fur79z5boz"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_status"
                        app:tint="@color/shades_100"
                        android:layout_marginEnd="7dp"
                        android:orientation="vertical">
                    </ImageView>
                    <TextView
                        android:id="@+id/r4s712p68qax"
                        android:textColor="#252525"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Pertanyaan 1/5"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <FrameLayout
                    android:id="@+id/btn_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_linkert"
                    android:backgroundTint="@color/yellow_100"
                    android:layout_gravity="center"
                    android:padding="11dp">

                    <LinearLayout
                        android:id="@+id/ic_close"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_close"
                        android:orientation="vertical"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ru2g2z6h49k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="22dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/r35pvx3fbf4p"
                    android:textColor="#252525"
                    android:textSize="14sp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Pertanyaan"
                    />
                <TextView
                    android:id="@+id/rtq7kyxkoh6q"
                    android:textColor="#252525"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas placerat ac orci eu efficitur. Curabitur nec arcu id magna tincidunt accumsan. Cras faucibus diam id massa auctor aliquam"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rmc9fa83a3b"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Jawaban"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_grey"
                app:endIconMode="custom"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tulis jawaban"
                    android:textColor="@color/shades_100"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/r528j3lb5ns4"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Lampiran File"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_grey"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_paperclip_2"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="format .pdf"
                    android:textColor="@color/shades_100"
                    android:focusable="false"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/r4f97vippp0i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/r8cqvaaiwpwv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card2"
                    android:backgroundTint="@color/yellow_500"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rerzs1p67iv"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Previous"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/rf9ch2n4g7xg"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card2"
                    android:backgroundTint="@color/yellow_500"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rbgb9hxztr3n"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Next"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>