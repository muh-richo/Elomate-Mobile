<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Edit Pendidikan"
        android:textColor="@color/shades_100"/>

    <TextView
        android:id="@+id/tv_title_univ"
        android:textColor="#121926"
        android:textSize="14sp"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Nama Universitas" />

    <com.unitedtractors.elomate.ui.custom.EducationEditText
        android:id="@+id/et_nama_univ"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="14sp"
        android:textColor="@color/shades_100"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_field_grey"
        android:hint="Masukkan Universitas"
        android:enabled="true"
        android:paddingHorizontal="15dp" />

    <TextView
        android:id="@+id/tv_title_jurusan"
        android:textColor="#121926"
        android:textSize="14sp"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Jurusan" />

    <com.unitedtractors.elomate.ui.custom.EducationEditText
        android:id="@+id/et_jurusan"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="14sp"
        android:textColor="@color/shades_100"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_field_grey"
        android:hint="Masukkan Jurusan"
        android:enabled="true"
        android:paddingHorizontal="15dp" />

    <TextView
        android:id="@+id/tv_title_jenjang_studi"
        android:textColor="#121926"
        android:textSize="14sp"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Jenjang Studi" />

    <LinearLayout
        android:id="@+id/jenjang_studi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/card_field_grey"
        android:paddingVertical="8dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_jenjang_studi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_arrow_down"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_tahun_lulus"
        android:textColor="#121926"
        android:textSize="14sp"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Tahun Lulus" />

    <com.unitedtractors.elomate.ui.custom.EducationEditText
        android:id="@+id/et_tahun_lulus"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="14sp"
        android:textColor="@color/shades_100"
        android:layout_marginBottom="24dp"
        android:background="@drawable/card_field_grey"
        android:hint="Masukkan Tahun Lulus"
        android:enabled="true"
        android:paddingHorizontal="15dp" />

    <LinearLayout
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_card2"
        android:backgroundTint="@color/yellow_500"
        android:paddingVertical="10dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_save"
            android:textColor="@color/shades_100"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Simpan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_card2"
        android:backgroundTint="@color/secondary_500"
        android:paddingVertical="10dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_delete"
            android:textColor="@color/shades_50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Hapus" />
    </LinearLayout>
</LinearLayout>
