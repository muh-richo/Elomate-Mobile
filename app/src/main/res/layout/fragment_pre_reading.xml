<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/neutral_50"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/r9sb2fktgown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card2"
            android:paddingVertical="8dp"
            android:paddingHorizontal="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="0dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_course"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginEnd="17dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_note_bold"
                    android:orientation="vertical">
                </ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/title_preReading"
                android:textColor="#252525"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Materi  Onboarding 1"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/detail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_circle_right"
                android:orientation="vertical">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>