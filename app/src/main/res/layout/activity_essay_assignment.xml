<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F9FAFB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/rb4s2y8r5v3w"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="24dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rkxb7u3e5kjg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="28dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rvrqzu18wgd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_title"
                    android:backgroundTint="@color/yellow_100"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="18dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/r4fur79z5boz"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_status"
                        app:tint="@color/shades_100"
                        android:layout_marginEnd="7dp"
                        android:orientation="vertical">
                    </ImageView>
                    <TextView
                        android:id="@+id/tv_title"
                        android:textColor="@color/shades_100"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Assignment"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <FrameLayout
                    android:id="@+id/btn_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_linkert"
                    android:backgroundTint="@color/yellow_100"
                    android:layout_gravity="center"
                    android:padding="11dp">

                    <LinearLayout
                        android:id="@+id/ic_close"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_close"
                        android:orientation="vertical"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ru2g2z6h49k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_question"
                    android:textColor="@color/shades_100"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Pertanyaan" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_question_essay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_question_essay"
                    tools:itemCount="3"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title_answer"
                android:textColor="@color/shades_100"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Jawaban"
                />

            <EditText
                android:id="@+id/et_answer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="Ketik jawaban Anda di sini..."
                android:gravity="start|top"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                android:background="@drawable/card_field_grey"
                android:inputType="textMultiLine"
                android:overScrollMode="ifContentScrolls"
                android:scrollbars="vertical"
                android:maxLength="500"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_title_lampiran"
                android:textColor="@color/shades_100"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Lampiran File" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/card_field_grey"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_paperclip_2"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="format.pdf"
                    android:textColor="@color/shades_100"
                    android:focusable="false"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/btn_submit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_card2"
                android:backgroundTint="@color/yellow_500"
                android:paddingVertical="10dp"
                android:paddingHorizontal="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_submit"
                    android:textColor="@color/shades_100"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Submit"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>