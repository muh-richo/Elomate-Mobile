<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipChildren="false"
        android:id="@+id/rt2dr0ttb0jp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F1F5F9"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reyu9ybu1xrj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_yellow"
                android:paddingTop="16dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_phase"
                    android:textColor="#121926"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Phase" />

                <LinearLayout
                    android:id="@+id/phase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_dropdown"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_phase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/icon_down2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#292D32"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_title_topic"
                    android:textColor="#121926"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Topic" />

                <LinearLayout
                    android:id="@+id/topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_dropdown"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_topic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/icon_down_topic"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#292D32"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reck5objl0s4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card2"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_table"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:text="Course Report" />

                <TableLayout
                    android:id="@+id/table_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1,2,3,4">

                    <!-- Header Row -->
                    <TableRow
                        android:id="@+id/header_row"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/card_table_top"
                        android:backgroundTint="@color/yellow_300">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="No"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="Course"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Nilai"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Status"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableLayout
                        android:id="@+id/dynamicRows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Footer Row -->
                    <TableRow
                        android:id="@+id/footer_row"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/card_table_bottom"
                        android:backgroundTint="@color/yellow_300"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="Rata-Rata"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_average_nilai"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center"
                            tools:text="-"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>

                <RelativeLayout
                    android:id="@+id/r4k5tixnqwf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rti8zoek9oo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/r4hlm4iy981m"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/rsu1nmxxd9k"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Kirkpatrick Report" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/view_detail"
                                    android:textColor="#0267FD"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="View Details" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/rnadnv66det02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/solution_title"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_marginStart="-30dp"
                                    tools:text="SOLUTION"
                                    android:rotation="270"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    />

                                <com.github.mikephil.charting.charts.RadarChart
                                    android:id="@+id/chart1"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="-30dp"
                                    android:scaleType="fitXY"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/bc_title"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    tools:text="8 BC"
                                    android:rotation="270"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    />

                                <com.github.mikephil.charting.charts.RadarChart
                                    android:id="@+id/chart2"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="-30dp"
                                    android:scaleType="fitXY"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>





                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>