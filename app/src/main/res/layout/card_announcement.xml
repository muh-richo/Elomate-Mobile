<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/r5c1jh5lv7e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_announcement"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_announcement"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#252525"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Pre-Test" />

        <TextView
            android:id="@+id/tv_description_announcement"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            tools:text="Innovation Management" />

        <TextView
            android:id="@+id/tv_deadline_announcement"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/error_700"
            android:textSize="12sp"
            tools:text="Deadline Selasa, 1 Oktober 2024" />

    </LinearLayout>

</LinearLayout>