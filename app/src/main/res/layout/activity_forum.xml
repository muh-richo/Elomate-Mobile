<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_100">

    <!-- Konten Utama -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/rzl4s81qs5h"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/rgtlgzhp86to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#FFD133"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rb8a83vgund"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_backarrow"
                        android:layout_marginEnd="10dp" />
                    <TextView
                        android:id="@+id/rynma8on69a"
                        android:textColor="#0F172A"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Forum" />
                </LinearLayout>

                <!-- Search Bar -->
                <LinearLayout
                    android:id="@+id/r5ilitipzoh6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_content"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/rk97ztuzbz5p"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginEnd="11dp" />
                    <TextView
                        android:id="@+id/rpufhwmvwva"
                        android:textColor="#94A3B8"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Cari forum" />
                </LinearLayout>

                <!-- Card 1 -->
                <LinearLayout
                    android:id="@+id/rrudvlaujbk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card2"
                    android:paddingVertical="25dp"
                    android:paddingHorizontal="31dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:elevation="0dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rzws1kcmamx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/r4a2hhso0fty"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="13dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY" />
                        <LinearLayout
                            android:id="@+id/rp6sahj6g3f"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/r6449p46pjme"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Naufal Romiz" />
                            <TextView
                                android:id="@+id/rjwbm4vqafro"
                                android:textColor="#808080"
                                android:textSize="10sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="6 hari yang lalu" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/rx7v738td0x"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mohon Bantuan" />
                    <TextView
                        android:id="@+id/r8uotmrv2cqs"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas placerat ac orci eu efficitur. Curabitur nec arcu id magna tincidunt accumsan. Cras faucibus diam id massa auctor aliquam..." />
                </LinearLayout>

                <!-- Card 2 -->
                <LinearLayout
                    android:id="@+id/rssofrl7iszm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card2"
                    android:paddingVertical="25dp"
                    android:paddingHorizontal="31dp"
                    android:layout_marginBottom="176dp"
                    android:layout_marginHorizontal="20dp"
                    android:elevation="0dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rcyh5jnmz7dw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/rb7ytfsk021a"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="13dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY" />
                        <LinearLayout
                            android:id="@+id/ru1ou41v0o5s"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/rs4o8stl5lyk"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Naufal Romiz" />
                            <TextView
                                android:id="@+id/r8fqnxif1t75"
                                android:textColor="#808080"
                                android:textSize="10sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="6 hari yang lalu" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/r5h1il6rhx35"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mohon Bantuan" />
                    <TextView
                        android:id="@+id/rkq3w3soqsr"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas placerat ac orci eu efficitur. Curabitur nec arcu id magna tincidunt accumsan. Cras faucibus diam id massa auctor aliquam..." />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_plus"
        android:backgroundTint="@color/yellow_500"
        android:contentDescription="Add Button" />

</FrameLayout>
