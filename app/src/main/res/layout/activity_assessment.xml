<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rrwbgi1u6kb9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F1F5F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rs2nwhjk9vf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#FFD133"
                android:paddingVertical="20dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_backarrow"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_title_self_peer"
                    android:textColor="#0F172A"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Self &amp; Peer Assessment" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card2"
                android:paddingVertical="18dp"
                android:paddingHorizontal="14dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ic_self"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_course"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_profil_bold"
                            android:scaleType="fitXY" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_self"
                            android:textColor="#252525"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Self Assessment" />

                        <LinearLayout
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:backgroundTint="@color/error_50"
                            android:paddingVertical="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_self_status"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_status"
                                app:tint="@color/error_500"
                                android:layout_marginEnd="6dp"
                                android:orientation="vertical">
                            </ImageView>

                            <TextView
                                android:id="@+id/tv_self_status"
                                android:textColor="@color/error_500"
                                android:textSize="10sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                tools:text="Incomplete" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card2"
                    android:backgroundTint="@color/blue_1"
                    android:paddingVertical="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mulai Isi Penilaian" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_peer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card2"
                android:paddingVertical="18dp"
                android:paddingHorizontal="14dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ic_peer"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_course"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_profile_2user_bold"
                            android:scaleType="fitXY" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_peer"
                            android:textColor="#252525"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Peer Assessment" />

                        <LinearLayout
                            android:id="@+id/peer_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:backgroundTint="@color/error_50"
                            android:paddingVertical="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_peer_status"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_status"
                                app:tint="@color/error_500"
                                android:layout_marginEnd="6dp"
                                android:orientation="vertical">
                            </ImageView>

                            <TextView
                                android:id="@+id/tv_peer_status"
                                android:textColor="@color/error_500"
                                android:textSize="10sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                tools:text="Incomplete" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_peer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card2"
                    android:backgroundTint="@color/blue_1"
                    android:paddingVertical="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Mulai Isi Penilaian" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
