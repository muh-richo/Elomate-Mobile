<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipChildren="false"
        android:id="@+id/rt2dr0ttb0jp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F1F5F9"
        android:paddingHorizontal="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="24dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r8z5f84m07w8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/card_profil"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FF000000"/>
                <LinearLayout
                    android:id="@+id/rnadnv66det"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="Naufal Ramiz" />

                    <TextView
                        android:id="@+id/tv_posisi"
                        android:textColor="#64748B"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="IT Management" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reyu9ybu1xrj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card2"
                android:backgroundTint="@color/yellow_100"
                android:paddingVertical="18dp"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rxj13b4m8i5i"
                    android:textColor="#121926"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Phase" />

                <LinearLayout
                    android:id="@+id/phase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_dropdown"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_phase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/icon_down2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#292D32"/>
                </LinearLayout>

                <TableLayout
                    android:id="@+id/rx34pb8s9dl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1,2,3,4">

                    <!-- Row for the headers -->
                    <TableRow
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:background="@drawable/card_table_top"
                        android:paddingHorizontal="8dp">

                        <TextView
                            android:id="@+id/title_no"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="No"
                            />

                        <TextView
                            android:id="@+id/title_course"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="Course"
                            />

                        <TextView
                            android:id="@+id/title_preTest"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Pre-Test"
                            />

                        <TextView
                            android:id="@+id/title_postTest"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Post-Test"
                            />

                        <TextView
                            android:id="@+id/title_status"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Status"
                            />
                    </TableRow>

                    <!-- Row for the first course -->
                    <TableRow
                        android:background="@color/shades_50"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/no1"
                            android:textColor="#252525"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            />

                        <TextView
                            android:id="@+id/course1"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="General Development"
                            />

                        <TextView
                            android:id="@+id/pre1"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="85"
                            />

                        <TextView
                            android:id="@+id/post1"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="80"
                            />

                        <TextView
                            android:id="@+id/status1"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Done"
                            />
                    </TableRow>

                    <!-- Repeat similar rows for other courses -->
                    <TableRow
                        android:background="@color/neutral_200"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/no2"
                            android:textColor="#252525"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2"
                            />

                        <TextView
                            android:id="@+id/course2"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="Orientasi Divisi"
                            />

                        <TextView
                            android:id="@+id/pre2"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="88"
                            />

                        <TextView
                            android:id="@+id/post2"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="80"
                            />

                        <TextView
                            android:id="@+id/status2"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Done"
                            />
                    </TableRow>
                    <TableRow
                        android:background="@color/shades_50"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/no3"
                            android:textColor="#252525"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            />

                        <TextView
                            android:id="@+id/course3"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="BGMS"
                            />

                        <TextView
                            android:id="@+id/pre3"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="-"
                            />

                        <TextView
                            android:id="@+id/post3"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="-"
                            />

                        <TextView
                            android:id="@+id/status3"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Not Yet"
                            />
                    </TableRow>
                    <TableRow
                        android:background="@color/neutral_200"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/no4"
                            android:textColor="#252525"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            />

                        <TextView
                            android:id="@+id/course4"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="General Development"
                            />

                        <TextView
                            android:id="@+id/pre4"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="-"
                            />

                        <TextView
                            android:id="@+id/post4"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="-"
                            />

                        <TextView
                            android:id="@+id/status4"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Not Yet"
                            />
                    </TableRow>
                    <TableRow
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/card_table_bottom"
                        android:backgroundTint="@color/shades_50"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/no5"
                            android:textColor="#252525"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=""
                            />

                        <TextView
                            android:id="@+id/course5"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="Rata-Rata"
                            />

                        <TextView
                            android:id="@+id/pre5"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="-"
                            />

                        <TextView
                            android:id="@+id/post5"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="-"
                            />

                        <TextView
                            android:id="@+id/status5"
                            android:textColor="#252525"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text=""
                            />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reck5objl0s4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card2"
                android:paddingHorizontal="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/r4k5tixnqwf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="-1dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rti8zoek9oo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingTop="6dp"
                            android:paddingHorizontal="1dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/rsu1nmxxd9k"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:layout_marginBottom="22dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Kirkpatrick Report"
                                />
                            <LinearLayout
                                android:id="@+id/r4hlm4iy981m"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_username"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    tools:text="Naufal Romiz" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    />
                                <TextView
                                    android:id="@+id/view_detail"
                                    android:textColor="#0267FD"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="View Details"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/rnadnv66det02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/solution_title"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_marginStart="-30dp"
                                    tools:text="SOLUTION"
                                    android:rotation="270"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    />

                                <com.github.mikephil.charting.charts.RadarChart
                                    android:id="@+id/chart1"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="-30dp"
                                    android:scaleType="fitXY"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/bc_title"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    tools:text="8 BC"
                                    android:rotation="270"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    />

                                <com.github.mikephil.charting.charts.RadarChart
                                    android:id="@+id/chart2"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="-30dp"
                                    android:scaleType="fitXY"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>





                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
