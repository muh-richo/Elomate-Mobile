<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card2"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:id="@+id/card_detail_assessment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="26dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_assessment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#334155"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            tools:text="SOLUTION Point" />

        <LinearLayout
            android:id="@+id/rulm36u8yzf"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CBD5E1"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_highest"
            android:textColor="#3D9315"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Nilai yang Perlu Dipertahankan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_high_1"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="- Saya memahami pentingnya peduli terhadap kebutuhan dan keluhan pelanggan." />

            <TextView
                android:id="@+id/tv_value_high_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:textSize="12sp"
                tools:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_high_2"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="- Saya memahami pentingnya peduli terhadap kebutuhan dan keluhan pelanggan." />

            <TextView
                android:id="@+id/tv_value_high_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:textSize="12sp"
                tools:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_high_3"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="- Saya memahami pentingnya peduli terhadap kebutuhan dan keluhan pelanggan." />

            <TextView
                android:id="@+id/tv_value_high_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:textSize="12sp"
                tools:text="10" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_lowest"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#B32A2A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:text="Nilai yang Perlu Ditingkatkan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_low_1"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="- Saya memahami pentingnya peduli terhadap kebutuhan dan keluhan pelanggan." />

            <TextView
                android:id="@+id/tv_value_low_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:textSize="12sp"
                tools:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_low_2"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="- Saya memahami pentingnya peduli terhadap kebutuhan dan keluhan pelanggan." />

            <TextView
                android:id="@+id/tv_value_low_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:textSize="12sp"
                tools:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_low_3"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="- Saya memahami pentingnya peduli terhadap kebutuhan dan keluhan pelanggan." />

            <TextView
                android:id="@+id/tv_value_low_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:textSize="12sp"
                tools:text="10" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>