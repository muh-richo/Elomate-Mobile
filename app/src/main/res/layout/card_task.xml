<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card2"
    android:paddingVertical="18dp"
    android:paddingHorizontal="21dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginBottom="20dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rq83a67kwbu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="11dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name_task"
            android:textColor="@color/shades_100"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Pre-Test" />
        <TextView
            android:id="@+id/tv_status"
            android:textColor="@color/error_500"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Incomplete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/refitlb8ggaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/r7vlkwneg429"
            android:textColor="@color/neutral_500"
            android:textSize="12sp"
            android:layout_marginEnd="9dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Course: " />
        <TextView
            android:id="@+id/tv_course"
            android:textColor="@color/neutral_500"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Onboarding" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r41xn1r3mhv9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/r124womnkoso"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_calender_time"
            android:backgroundTint="@color/error_500"
            android:layout_marginEnd="7dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/tv_deadline"
            android:textColor="@color/error_500"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="6 November 2024" />
    </LinearLayout>
</LinearLayout>
