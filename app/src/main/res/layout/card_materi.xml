<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_materi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/bg_card2"
    android:paddingHorizontal="14dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_course"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_teacher_bold"
            android:orientation="vertical">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card2"
        android:elevation="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_materi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/shades_100"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Materi Onboarding 1" />

        <ImageView
            android:id="@+id/iv_arrow_detail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_circle_right"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>