<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/r64gu2yi24ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card2"
        android:padding="14dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rmg72f3g9nn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card2"
            android:backgroundTint="@color/yellow_100"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:layout_marginEnd="11dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pendidikan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_teacher"
                android:scaleType="fitXY"
                app:tint="@color/yellow_700" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_nama_univ"
                    android:textColor="@color/shades_100"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="9dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Nama Universitas :" />

                <TextView
                    android:id="@+id/tv_nama_univ"
                    android:textColor="@color/shades_100"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="Universitas Brawijaya" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_jurusan"
                    android:textColor="@color/shades_100"
                    android:textSize="12sp"
                    android:layout_marginEnd="9dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Jurusan                   :" />

                <TextView
                    android:id="@+id/tv_jurusan"
                    android:textColor="@color/shades_100"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    tools:text="Teknik informatika" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_jenjang"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_marginEnd="9dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Jenjang                   :"
                    />
                <TextView
                    android:id="@+id/tv_jenjang"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    tools:text="S1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_title_tahun_lulus"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_marginEnd="9dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Tahun lulus            :"
                    />
                <TextView
                    android:id="@+id/tv_tahun_lulus"
                    android:textColor="@color/shades_100"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="2025" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_edit_education"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:scaleType="fitXY" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CBD5E1"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>




