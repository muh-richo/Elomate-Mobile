<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#FFD133"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_backarrow"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/iv_title_detail_mentoring"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Report Mentoring" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F9FAFB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/r6711ozuhk6j"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_detail"
                android:paddingTop="18dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rk1w007mjbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rcy453p0lqy5"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Detail" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_title"
                        android:backgroundTint="#CFF0FD"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_status"
                            android:textColor="#0CA1DC"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            tools:text="Processing" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ruvkoy80zzmg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_detail2"
                    android:paddingBottom="25dp"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="1dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_mentor"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:maxWidth="100dp"
                                android:layout_weight="1"
                                android:text="Mentor" />

                            <TextView
                                android:id="@+id/tv_mentor"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:maxWidth="260dp"
                                tools:text="Leandro Zavier" />

                        </LinearLayout>

                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/neutral_300" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="1dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_topic"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:maxWidth="100dp"
                                android:layout_weight="1"
                                android:text="Topic" />

                            <TextView
                                android:id="@+id/tv_topik"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:maxWidth="260dp"
                                tools:text="Topik Materi" />
                        </LinearLayout>
                        <View
                            android:id="@+id/line2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/neutral_300" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="1dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_type"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:maxWidth="100dp"
                                android:layout_weight="1"
                                android:text="Type" />

                            <TextView
                                android:id="@+id/tv_type"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:maxWidth="260dp"
                                tools:text="Choaching" />
                        </LinearLayout>
                        <View
                            android:id="@+id/line3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/neutral_300" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="1dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_date"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:maxWidth="100dp"
                                android:layout_weight="1"
                                android:text="Date" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:maxWidth="260dp"
                                tools:text="14 November 2024" />
                        </LinearLayout>
                        <View
                            android:id="@+id/line4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/neutral_300" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="1dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_time"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:maxWidth="100dp"
                                android:layout_weight="1"
                                android:text="Time" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:maxWidth="260dp"
                                tools:text="09:00 - 10:00 WIB" />
                        </LinearLayout>
                        <View
                            android:id="@+id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/neutral_300" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="14dp"
                        android:paddingHorizontal="1dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_method"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:maxWidth="100dp"
                                android:layout_weight="1"
                                android:text="Method" />

                            <TextView
                                android:id="@+id/tv_method"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:maxWidth="260dp"
                                tools:text="Offline" />

                        </LinearLayout>
                        <View
                            android:id="@+id/line6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/neutral_300" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r85pdus7zomh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_detail2_round"
                android:paddingVertical="25dp"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_kompetensi"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Kompetensi yang dievaluasi" />

                <TextView
                    android:id="@+id/tv_kompetensi"
                    android:textColor="#252525"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    tools:text="Behaviour Competencies" />

                <TextView
                    android:id="@+id/tv_title_lesson_learned"
                    android:textColor="#252525"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Lesson Learned Competencies" />

                <TextView
                    android:id="@+id/tv_desc_lesson_learned"
                    android:textColor="#252525"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Tuliskan dalam bentuk poin pembelajaran yang didapat selama Choaching / Mentoring" />

                <EditText
                    android:id="@+id/et_lesson_learned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:hint="Ketik jawaban Anda di sini..."
                    android:gravity="start|top"
                    android:layout_marginBottom="20dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bg_content"
                    android:inputType="textMultiLine"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    android:maxLength="500"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/rf873vln0d4"
                    android:textColor="#252525"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Catatan dari Mentor" />

                <TextView
                    android:id="@+id/tv_title_catatan"
                    android:textColor="#252525"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Catatan terkait hal yang sudah improve dan area of development" />

                <EditText
                    android:id="@+id/et_catatan_mentor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:hint="Ketik jawaban Anda di sini..."
                    android:gravity="start|top"
                    android:layout_marginBottom="30dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:background="@drawable/bg_content"
                    android:inputType="textMultiLine"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    android:maxLength="500"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card2"
                    android:backgroundTint="#FFCA0D"
                    android:paddingVertical="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_save"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Simpan" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
