<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_assessment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card2"
    android:paddingVertical="14dp"
    android:paddingHorizontal="14dp"
    android:layout_marginBottom="14dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ic_self"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_course"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_profil_bold"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_assessment"
                android:textColor="#252525"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                tools:text="Solution" />

            <TextView
                android:id="@+id/tv_desc_assessment"
                android:textColor="#252525"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                tools:text="360Â° Behaviour Competency Index" />

            <LinearLayout
                android:id="@+id/deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_deadline"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calender_time"
                    app:tint="@color/secondary_500"
                    android:layout_marginEnd="7dp"
                    android:orientation="vertical">
                </ImageView>

                <TextView
                    android:id="@+id/tv_deadline"
                    android:textColor="#C62828"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="17 September 2024"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>