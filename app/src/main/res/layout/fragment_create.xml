            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/ra8v7e74tklm"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/card_field_grey"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar_2"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="#94A3B8"
                app:endIconTint="#94A3B8">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="dd/mm/yyyy"
                    android:textColor="@color/shades_100"
                    android:textSize="14sp"
                    android:inputType="date"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/r0620aje2ngh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Start"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_field_grey"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_clock"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        android:textColorHint="#94A3B8"
                        app:endIconTint="#94A3B8">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextDate2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="00:00"
                            android:textColor="@color/shades_100"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="End"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout3"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_field_grey"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_clock"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        android:textColorHint="#94A3B8"
                        app:endIconTint="#94A3B8">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextDate3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="00:00"
                            android:textColor="@color/shades_100"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/rdyzho2bk3l6"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Method"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:paddingRight="10dp"
                android:background="@drawable/card_field_grey">

                <Spinner
                    android:id="@+id/spinner_metode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="14dp"
                    android:paddingLeft="12dp"
                    android:hint="Pilih metode"
                    android:textColor="@color/shades_100"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    tools:ignore="NotSibling"
                    android:layout_toEndOf="@id/iconMetode"/>

                <ImageView
                    android:id="@+id/iconMetode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_down"
                    android:padding="4dp"
                    app:tint="#94A3B8" />
            </RelativeLayout>

            <TextView
                android:id="@+id/r61vduwqv8zu"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Type"
                />
            <RelativeLayout
                android:id="@+id/title_tipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:paddingRight="10dp"
                android:background="@drawable/card_field_grey">

                <Spinner
                    android:id="@+id/spinner_tipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="14dp"
                    android:paddingLeft="12dp"
                    android:hint="Pilih metode"
                    android:textColor="@color/shades_100"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_toEndOf="@id/title_tipe"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/iconTipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_down"
                    android:padding="4dp"
                    app:tint="#94A3B8" />
            </RelativeLayout>
            <TextView
                android:id="@+id/rr7216282fhc"
                android:textColor="#0F172A"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Competencies"
                />
            <RelativeLayout
                android:id="@+id/kompetensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="18dp"
                android:paddingRight="10dp"
                android:background="@drawable/card_field_grey">

                <Spinner
                    android:id="@+id/spinner_kompetensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="14dp"
                    android:paddingLeft="12dp"
                    android:hint="Pilih metode"
                    android:textColor="@color/shades_100"
                    android:textSize="14sp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_toEndOf="@id/iconKompetensi"/>

                <ImageView
                    android:id="@+id/iconKompetensi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_down"
                    android:padding="4dp"
                    app:tint="#94A3B8" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/rvso80260ym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_card2"
                android:backgroundTint="#FFCA0D"
                android:paddingVertical="18dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rz51jewk3j5o"
                    android:textColor="#252525"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Add"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
