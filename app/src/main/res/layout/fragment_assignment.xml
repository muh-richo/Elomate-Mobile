<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/neutral_50"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rci19ahac1u"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/neutral_50"
        android:paddingTop="24dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/r6nxprnec81k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="23dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rbhce5oe31f"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_hi_user"
                        android:textColor="@color/neutral_500"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="Hi, Naufal Ramiz"/>

                    <TextView
                        android:id="@+id/tv_find_course"
                        android:textColor="@color/shades_100"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Find Your Course"/>
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_user"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/shades_50"/>
            </LinearLayout>

            <!-- Dropdown -->
            <LinearLayout
                android:id="@+id/rxzcrm1et3ua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <!-- Dropdown Phase -->
                <LinearLayout
                    android:id="@+id/rkknogw6rvzn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_yellow"
                    android:paddingTop="16dp"
                    android:paddingBottom="30dp"
                    android:paddingHorizontal="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/r390m17o0n0g"
                        android:textColor="#121926"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Phase"/>

                    <LinearLayout
                        android:id="@+id/phase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_dropdown"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_phase"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:spinnerMode="dropdown"
                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:background="@android:color/transparent"/>

                        <ImageView
                            android:id="@+id/icon_down2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="#292D32"/>
                    </LinearLayout>

                    <!-- Dropdown Topic -->
                    <TextView
                        android:id="@+id/rsd0zhhv5wxh"
                        android:textColor="#121926"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Topic"/>

                    <LinearLayout
                        android:id="@+id/topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_dropdown"
                        android:paddingVertical="8dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_topic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:spinnerMode="dropdown"
                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:background="@android:color/transparent"/>

                        <ImageView
                            android:id="@+id/icon_down"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="#292D32"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/card_course"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="50dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/yellow_500"
                android:visibility="gone"
                android:indeterminate="true"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>