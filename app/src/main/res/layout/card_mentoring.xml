<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bg_title"
            android:backgroundTint="@color/error_50"
            android:paddingVertical="5dp"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_status"
                app:tint="@color/error_500"
                android:layout_marginEnd="6dp"
                android:orientation="vertical">
            </ImageView>

            <TextView
                android:id="@+id/tv_status"
                android:textColor="@color/error_500"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Approve" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:textColor="#64748B"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="20 Agustus 2024" />

        <TextView
            android:id="@+id/tv_time"
            android:textColor="#64748B"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="09:00 - 14:00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="2dp"
        android:layout_height="180dp"
        android:background="@color/neutral_300"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/kompetensi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="1dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Behavior Competencies" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trash"
                android:orientation="vertical">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mentor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:layout_marginEnd="11dp"
                android:orientation="vertical">
            </ImageView>

            <TextView
                android:id="@+id/tv_mentor"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Leandro Zavier" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topik2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_document_text"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
            </ImageView>

            <TextView
                android:id="@+id/tv_topic"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Topik mentoring" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                app:tint="@color/shades_100">
            </ImageView>

            <TextView
                android:id="@+id/tv_method"
                android:textColor="@color/shades_100"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Offline" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_element_equal"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
            </ImageView>

            <TextView
                android:id="@+id/tv_type"
                android:textColor="@color/shades_100"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Choaching" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_card2"
            android:backgroundTint="#FFCA0D"
            android:paddingVertical="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_button2"
                android:textColor="@color/shades_100"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Detail" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>