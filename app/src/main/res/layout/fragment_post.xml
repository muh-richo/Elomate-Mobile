<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/neutral_50"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rpfz8jfp8wch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F9FAFB">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rx0boctnqzw"
                android:textColor="#1C1D1D"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="21dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Progress"
                />
            <LinearLayout
                android:id="@+id/r8vr2emlm4mi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:minWidth="280dp"
                    android:layout_height="23dp"
                    android:progress="50"
                    android:max="100"
                    android:progressDrawable="@drawable/line_progress"
                    android:progressTint="@color/yellow_500"
                    style="?android:attr/progressBarStyleHorizontal"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/rwoilh281qc8"
                    android:textColor="#1C1D1D"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="20%"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_assigment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card2"
                android:padding="10dp"
                android:layout_marginBottom="14dp"
                android:layout_marginHorizontal="20dp"
                android:elevation="0dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/r0sxogamg7knj"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_course"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/rnzd8bnlyr5b"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_teacher_bold"
                        android:orientation="vertical">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/assigment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="1dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rjen89baappk"
                        android:textColor="#252525"
                        android:textSize="14sp"
                        android:layout_marginBottom="11dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Assigment"
                        />
                    <LinearLayout
                        android:id="@+id/re50texctp4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rqer0g08k72p"
                            android:textColor="#64748B"
                            android:textSize="12sp"
                            android:layout_marginEnd="9dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Course    : "
                            />
                        <TextView
                            android:id="@+id/r26zro3jxv6m"
                            android:textColor="#64748B"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Onboarding "
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rprl689al0bq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/rovj5mmelnl"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calender_time"
                            app:tint="@color/secondary_500"
                            android:layout_marginEnd="7dp"
                            android:orientation="vertical">
                        </ImageView>
                        <TextView
                            android:id="@+id/rp6x0h4xtoan"
                            android:textColor="#C62828"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="17 September 2024"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/rpowvw10ywmf"
                    android:textColor="#C62828"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:text="Incomplete"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>