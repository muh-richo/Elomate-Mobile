<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rl3h5as5c9tj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#FFD133"
        android:paddingVertical="21dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_backarrow"
            android:background="@color/transparant"
            android:layout_marginEnd="9dp"
            android:orientation="vertical">
        </ImageButton>
        <TextView
            android:id="@+id/rd59q3g08xfs"
            android:textColor="#0F172A"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Edit Profile"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/r3gksuvi2dn9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="@color/neutral_100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rm56v6rzw1s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card2"
                android:backgroundTint="@color/neutral_50"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/profile_ava"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:background="@drawable/bg_ava"
                    android:layout_marginEnd="18dp"
                    android:layout_gravity="center">

                    <!-- Gambar avatar -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:src="@mipmap/ic_launcher"
                        android:paddingRight="5dp">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <!-- Icon edit (diletakkan di kanan bawah) -->
                    <ImageView
                        android:id="@+id/ic_edit"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_pen_edit"
                        android:scaleType="fitXY"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="6dp" />
                </FrameLayout>
                <TextView
                    android:id="@+id/rrt0ovq1114p"
                    android:textColor="#121926"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Nama Lengkap"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/namaInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/card_field_yellow"
                    android:backgroundTint="@color/yellow_200"
                    app:startIconDrawable="@drawable/ic_user_edit"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/neutral_500"
                    app:endIconTint="@color/neutral_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextNama"
                        android:paddingStart="38dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Naufal Ramiz"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:enabled="false"
                        android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/rrxcehbh8vt"
                    android:textColor="#121926"
                    android:textSize="12sp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="NRP"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nrpInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/card_field_yellow"
                    android:backgroundTint="@color/yellow_200"
                    app:startIconDrawable="@drawable/ic_card"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/neutral_500"
                    app:endIconTint="@color/neutral_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextNRP"
                        android:paddingStart="38dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="30023098765512"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:enabled="false"
                        android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/r0zn0xse73hzr"
                    android:textColor="#121926"
                    android:textSize="12sp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Posisi"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/posisiInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/card_field_yellow"
                    android:backgroundTint="@color/yellow_200"
                    app:startIconDrawable="@drawable/ic_office_bag"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/neutral_500"
                    app:endIconTint="@color/neutral_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPosisi"
                        android:paddingStart="38dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Administration Department"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:enabled="false"
                        android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/rjabit49f8o"
                    android:textColor="#121926"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Asal Universitas"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/univInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/card_field_yellow"
                    android:backgroundTint="@color/yellow_200"
                    app:startIconDrawable="@drawable/ic_compound"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/neutral_500"
                    app:endIconTint="@color/neutral_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextUniv"
                        android:paddingStart="38dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Universitas Brawijaya"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:enabled="false"
                        android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:id="@+id/r0620aje2ngh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="18dp"
                    android:layout_marginHorizontal="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Tempat lahir"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:paddingBottom="8dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout2"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_field_yellow"
                            app:startIconDrawable="@drawable/ic_location"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            android:textColorHint="#94A3B8"
                            app:startIconTint="#94A3B8">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextDate2"
                                android:paddingStart="38dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="kota"
                                android:textColor="@color/shades_100"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Tanggal Lahir"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:paddingBottom="8dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout3"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/card_field_yellow"
                            app:startIconDrawable="@drawable/ic_calendar_2"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            android:textColorHint="#94A3B8"
                            app:endIconTint="#94A3B8">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextDate3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="38dp"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="hh/mm/yyyy"
                                android:inputType="date"
                                android:textColor="@color/shades_100"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/TextDomisili"
                    android:textColor="#121926"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Domisili"
                    app:hintEnabled="false"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/domInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/card_field_yellow"
                    app:startIconDrawable="@drawable/ic_location"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/neutral_500"
                    app:endIconTint="@color/neutral_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDom"
                        android:paddingStart="38dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Domisili"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/TextNoHP"
                    android:textColor="#121926"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="No HP"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/noHpInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/card_field_yellow"
                    app:startIconDrawable="@drawable/ic_call"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/neutral_500"
                    app:endIconTint="@color/neutral_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextNoHP"
                        android:paddingStart="38dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:inputType="text|phone"
                        android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/TextEmail"
                    android:textColor="#121926"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Email"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/card_field_yellow"
                    app:startIconDrawable="@drawable/ic_directbox_notif"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:textColorHint="@color/neutral_500"
                    app:endIconTint="@color/neutral_500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextEmail"
                        android:paddingStart="38dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:backgroundTint="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:id="@+id/ro71vzpr3y6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card2"
                    android:backgroundTint="@color/yellow_500"
                    android:paddingVertical="13dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rblhu00lfoce"
                        android:textColor="#252525"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Simpan "
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rff6wnl4uf69"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card2"
                    android:backgroundTint="@color/secondary_500"
                    android:paddingVertical="15dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rtm53lf0535"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Hapus"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>