<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:backgroundTint="@color/shades_50"
    android:background="@drawable/bg_card2"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="14dp"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_course"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_profil_bold"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nama_lengkap"
            android:textColor="#252525"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Emmanuela Evelyn" />

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_status"
                app:tint="@color/success_700"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textColor="@color/success_700"
                android:textSize="10sp"
                android:layout_weight="1"
                tools:text="Complete" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>