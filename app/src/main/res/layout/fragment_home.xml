<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/yellow_700" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:background="#F1F5F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#FFD133"
                android:paddingVertical="24dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_user"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/shades_50"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_hi_user"
                        android:textColor="@color/shades_100"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="Hi, Naufal Ramiz"/>

                    <TextView
                        android:id="@+id/tv_role"
                        android:textColor="#64748B"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        tools:text="Management Trainee"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/announcement"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_notif"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/ic_notif"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notif"
                        android:orientation="vertical">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:paddingTop="18dp"
                android:paddingBottom="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal">

                    <!-- Kiri -->
                    <LinearLayout
                        android:id="@+id/title_todo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_title"
                        android:paddingVertical="4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/todo"
                            android:textColor="@color/shades_100"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="To do list"/>
                    </LinearLayout>

                    <!-- Kanan -->
                    <View
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_all_todo"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Semua"/>

                    <ImageView
                        android:id="@+id/iv_all_todo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/shades_100"
                        android:src="@drawable/ic_arrow_right"
                        android:orientation="vertical">
                    </ImageView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_todo_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/card_task"
                    tools:itemCount="2"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card"
                android:paddingBottom="18dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card2"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/monday"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="Mon"
                            android:lineSpacingExtra="2sp"
                            android:translationY="-1.18sp"
                            android:gravity="center_horizontal|top" />

                        <TextView
                            android:id="@+id/tuesday"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="Tue"
                            android:lineSpacingExtra="2sp"
                            android:translationY="-1.18sp"
                            android:gravity="center_horizontal|top" />

                        <TextView
                            android:id="@+id/wednesday"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="Wed"
                            android:lineSpacingExtra="2sp"
                            android:translationY="-1.18sp"
                            android:gravity="center_horizontal|top" />

                        <TextView
                            android:id="@+id/thursday"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="Thu"
                            android:lineSpacingExtra="2sp"
                            android:translationY="-1.18sp"
                            android:gravity="center_horizontal|top" />

                        <TextView
                            android:id="@+id/friday"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="Fri"
                            android:lineSpacingExtra="2sp"
                            android:translationY="-1.18sp"
                            android:gravity="center_horizontal|top" />

                        <TextView
                            android:id="@+id/saturday"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="Sat"
                            android:lineSpacingExtra="2sp"
                            android:translationY="-1.18sp"
                            android:gravity="center_horizontal|top" />

                        <TextView
                            android:id="@+id/sunday"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:textSize="16sp"
                            android:text="Sun"
                            android:lineSpacingExtra="2sp"
                            android:translationY="-1.18sp"
                            android:gravity="center_horizontal|top" />
                    </LinearLayout>

                    <com.kizitonwose.calendar.view.WeekCalendarView
                        android:id="@+id/weekCalendarView"
                        android:layout_width="345dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        app:cv_dayViewResource="@layout/calendar_day_layout" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_schedule_title"
                        android:textColor="#252525"
                        android:textSize="16sp"
                        android:layout_marginEnd="9dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Today schedule" />

                    <LinearLayout
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_rednotif"
                        android:paddingVertical="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_schedule_count"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            tools:text="2" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/allSchedule"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/shades_100"
                        android:textSize="14sp"
                        android:text="Semua" />
                    <ImageView
                        android:id="@+id/icon_allSchedule"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/shades_100"
                        android:src="@drawable/ic_arrow_right"
                        android:orientation="vertical">
                    </ImageView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNoTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Tidak ada tugas"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textColor="@color/shades_100"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_schedule_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    tools:listitem="@layout/card_task"
                    tools:itemCount="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/todo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:paddingVertical="16dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/title_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_title"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="#252525"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingRight="18dp"
                        android:paddingLeft="18dp"
                        android:text="Progress"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_course_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_course_progress"
                    tools:itemCount="5"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>